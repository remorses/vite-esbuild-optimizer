{
    "compilerOptions": {
        "composite": true,
        "target": "ES5",
        "module": "commonjs",
        "importHelpers": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "rootDir": "src",
        "lib": [
            "es2017",
            "es7",
            "es6"
            // "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "skipLibCheck": true
    },

    "exclude": ["node_modules", "dist", "esm", "example", "./tests"]
}
